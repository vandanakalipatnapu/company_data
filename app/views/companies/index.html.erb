<style>
	.textcolor{color:green;}
	.align{text-align:center;}
</style>

<center><h2 class="text-danger">All Companies</h2></center>
<!-- <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"> -->
<div class="container">

	<%= link_to "New Company",new_company_path ,class: "btn btn-info btn-sm"%><br/>

	<br/><div class="table">
			<table class="table table-striped table-hover table-bordered">	
				<tr class="info">
					<th class="align">Company Name</th>
					<th class="align">City</th>
					<th class="align">Website</th>
					<th colspan="5" class="align">Actions</th>
				</tr>
				<% @companies.each do |c|%>
					<tr class="textcolor ">
						<td class="align"><%=link_to c.name,c %></td>
						<td class="align"><%= c.city %></td>
						<td class="align"><%= link_to c.website,c %></td>
						<td class="align"><%= link_to "Edit",edit_company_path(c)%></td>
						<td class="align"><%= link_to "Delete",c ,method: :delete ,data:{confirm: "Are you sure to delete?"}%></td> 
					</tr>
				<% end %>
			</table>
		</div>
</div>

