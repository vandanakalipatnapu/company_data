<html>
	<center><h2 class="text-danger">Candidate</h2></center>
	<hr/>
<!-- 
	 <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"> -->

	<div class="container">
	
		<%= form_for [@company,@job,@candidate] do |c| %>
	
			<div class="form-group">
				<%= c.label :name,class:"control-label col-sm-4"%>
				<%= c.text_field :name,class:"form-control col-sm-4"%>
			</div>

			<div class="form-group">
				<%= c.label :email,class:"control-label col-sm-4" %>
				<%= c.email_field :email,class:"form-control col-sm-4" %>
			</div>

			<div class="form-group">
				<%= c.label :phno,class:"control-label col-sm-4" %>
				<%= c.text_field :phno,class:"form-control col-sm-4" %>
			</div>

				<%= c.submit "save candidate",class:"btn btn-info btn-sm" %>

				<br/><br/>

			<center><%= link_to "Candidates List",company_job_path(@company.id,@job.id) ,class:"btn btn-info btn-sm"%></center>
	</div>
	
		<% end %>

</html>