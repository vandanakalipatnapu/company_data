<html>
	<center><h2 class="text-danger">Company</h2></center>
	<hr/>

	 <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

	<div class="container">
		<%= form_for @company do |c| %>

			<div class="form-group">
				<%= c.label :Company_Name,class:"control-label col-sm-4"%>
				<%= c.text_field :name,class:"form-control col-sm-4"%>
			</div>

			<div class="form-group">
				<%= c.label :City,class:"control-label col-sm-4"%>
				<%= c.text_field :city,class:"form-control col-sm-4"%>
			</div>

			<div class="form-group">
				<%= c.label :Website,class:"control-label col-sm-4" %>
				<%= c.text_field :website,class:"form-control col-sm-4" %>
			</div>

			<div>
				<%= c.submit "save company",class:"btn btn-info btn-sm" %>
			</div>

		<% end %>
		<br/><center><%= link_to "all companies",companies_path,class:"btn btn-sm btn-info" %></center>

		<% if @company.errors.present? %>
		    <div id="error_explanation">
		      <h3 class="text-danger">
		        <%= pluralize(@company.errors.count, "error") %> prohibited
		        this article from being saved:
		      </h3>
		      <ul>
		        <% @company.errors.full_messages.each do |msg| %>
		          <div class="alert alert-danger">
		          	<li><%= msg %></li>
		          </div>
		        <% end %>
		      </ul>
		    </div>
  		<% end %>

  </div>
</html>